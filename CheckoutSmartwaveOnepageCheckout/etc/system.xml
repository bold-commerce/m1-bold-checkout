<?xml version="1.0"?>
<config>
    <sections>
        <checkout>
            <groups>
                <bold_advanced>
                    <fields>
                        <adapt_fractional_price translate="label">
                            <label>Adapt Fractional Price</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <comment>Enabling this setting allows to get correct prices on Bold Checkout
                                for product packages by treating product package as a single unit. </comment>
                        </adapt_fractional_price>
                    </fields>
                </bold_advanced>
            </groups>
        </checkout>
    </sections>
</config>
