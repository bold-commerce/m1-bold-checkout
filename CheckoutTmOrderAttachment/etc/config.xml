<?xml version="1.0"?>
<config>
    <modules>
        <Bold_CheckoutTmOrderAttachment>
            <version>1.0.0.0</version>
        </Bold_CheckoutTmOrderAttachment>
    </modules>
    <global>
        <models>
            <orderattachment>
                <rewrite>
                    <attachment>Bold_CheckoutTmOrderAttachment_Model_Attachment</attachment>
                </rewrite>
            </orderattachment>
            <bold_checkouttaxexempt>
                <rewrite>
                    <taxexempt_file_upload_config>Bold_CheckoutTmOrderAttachment_Model_TaxExempt_File_Upload_Config</taxexempt_file_upload_config>
                </rewrite>
            </bold_checkouttaxexempt>
        </models>
        <events>
            <bold_checkout_tax_exempt_document_upload_after>
                <observers>
                    <bold>
                        <class>Bold_CheckoutTmOrderAttachment_Observer_TaxExemptDocumentUploadAfterObserver</class>
                        <method>createOrderAttachment</method>
                    </bold>
                </observers>
            </bold_checkout_tax_exempt_document_upload_after>
            <bold_checkout_tax_exempt_delete_after>
                <observers>
                    <bold>
                        <class>Bold_CheckoutTmOrderAttachment_Observer_TaxExemptDeleteAfterObserver</class>
                        <method>deleteOrderAttachment</method>
                    </bold>
                </observers>
            </bold_checkout_tax_exempt_delete_after>
            <order_attachment_save_after>
                <observers>
                    <bold>
                        <class>Bold_CheckoutTmOrderAttachment_Observer_OrderAttachmentSaveAfterObserver</class>
                        <method>saveTaxExempt</method>
                    </bold>
                </observers>
            </order_attachment_save_after>
            <order_attachment_delete_after>
                <observers>
                    <bold>
                        <class>Bold_CheckoutTmOrderAttachment_Observer_OrderAttachmentDeleteAfterObserver</class>
                        <method>deleteTaxExempt</method>
                    </bold>
                </observers>
            </order_attachment_delete_after>
        </events>
        <blocks>
            <bold_checkouttaxexempt>
                <rewrite>
                    <adminhtml_sales_order_view_tab_attachments>Bold_CheckoutTmOrderAttachment_Block_Adminhtml_Sales_Order_View_Tab_Attachments</adminhtml_sales_order_view_tab_attachments>
                </rewrite>
            </bold_checkouttaxexempt>
            <orderattachment>
                <rewrite>
                    <view>Bold_CheckoutTmOrderAttachment_Block_View</view>
                </rewrite>
            </orderattachment>
        </blocks>
    </global>
</config>
